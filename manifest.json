{
    "manifest_version": 3,
    "name": "uRest",
    "description": "This extension lets you set up a timer that has a random rest interval",
    "version": "1.0",
    "permissions":["scripting","contextMenus", "tabs", "storage", "alarms", "notifications"],
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
        {
        "js": ["popup.js", "background.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "action":{
        "default_popup": "popup.html",
        "default_icon": "timer-play.png",
        "default_title": "uRest" 
    }
}